%div{:style => "width: 685px; margin: 0 auto;"}
  .account-detail
    %span{:id => "detail_head"}
      Change your password
    -form_for(@user, :as => @user, :url => user_password_path, :html => { :method => :put }) do |f|
      .field_content
        =f.label :current_password
        %br
        =f.password_field :current_password, :class => "account_input"
      .field_content
        =f.label :password, "New password"
        %br
        =f.password_field :password, :class => "account_input"
      .field_content
        =f.label :password_confirmation, "Confirm new password"
        %br
        =f.password_field :password_confirmation, :class => "account_input"
      .field_content
        =f.submit "Change my password", :id => "submit_button"

  .notifications
    %span{:id => "detail_head"}
      Notifications
    =form_tag update_notify_path do
      %div{:style => "float: left;"}
        =custom_check_box(@user)
      Remind me to add Tweets where i've run out in my buffer
      %br
      %div{:style => "text-align: center; height: 119px;"}
        %img{:src => "/images/tweet_bird.jpg"}
      .field_content
        =submit_tag "Save notifications", :id => "submit_button"

  .timezone
    %span{:id => "detail_head"}
      Select your timezone
    =form_tag update_timezone_path do
      .field_content
        = timezone_select("account[timezone]", @user.timezone_id)
      %br
      %div{:style => "text-align: center; height: 99px;"}
        %img{:src => "/images/timezone_bird.jpg"}
      .field_content
        =submit_tag "Update timezone", :id => "submit_button"

